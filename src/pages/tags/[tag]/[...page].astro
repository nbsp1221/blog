---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const tags = getUniqueTags(posts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPosts = getPostsByTag(posts, tag);

    return paginate(tagPosts, {
      params: { tag },
      props: { tagName },
      pageSize: SITE.postPerPage,
    });
  });
}

const params = Astro.params;
const { tag } = params;
const { page, tagName } = Astro.props;
---

<Layout title={`Tag: ${tagName} | ${SITE.title}`}>
  <Header />
  <main
    id="main-content"
    class="min-h-[calc(100dvh-90px-70px)] app-layout py-10 max-[500px]:min-h-[calc(100dvh-110px-70px)]"
  >
    <h2
      class="mb-10 text-2xl font-medium tracking-wide text-accent max-[500px]:text-lg"
    >
      Posts tagged with{" "}
      <span class="text-foreground" transition:name={tag}>#{tagName}</span>
    </h2>
    <ul>
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </main>

  <Pagination {page} />

  <Footer />
</Layout>
