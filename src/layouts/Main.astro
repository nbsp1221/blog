---
type StringTitle = { pageTitle: string };
type ArrayTitle = { pageTitle: [string, string]; titleTransition: string };

type Props = (StringTitle | ArrayTitle) & { pageDesc?: string };

const { props } = Astro;
---

<main
  id="main-content"
  class="min-h-[calc(100dvh-90px-70px)] app-layout py-10 max-[500px]:min-h-[calc(100dvh-110px-70px)]"
>
  {
    "pageTitle" in props && (
      <h2 class="text-2xl font-medium tracking-wide text-accent max-[500px]:text-lg">
        {"titleTransition" in props ? (
          <>
            {props.pageTitle[0]}{" "}
            <span transition:name={props.titleTransition}>
              {props.pageTitle[1]}
            </span>
          </>
        ) : (
          props.pageTitle
        )}
      </h2>
    )
  }
  {
    props.pageDesc && (
      <p class="mt-4 tracking-wide max-[500px]:text-sm max-[500px]:leading-[2.2]">
        {props.pageDesc}
      </p>
    )
  }
  <slot />
</main>
